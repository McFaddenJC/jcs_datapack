# Defaults for JC's Servers
#  These commands will run each time the server is started or reloaded

# Rules to make it fun for younger players
# Players keep inventory and experience upon death
gamerule keepInventory true

# Disable the ability to drown
gamerule drowningDamage true

# Disable damage taken from falling too far
gamerule fallDamage true

# Disable damage from lava, magma, and fires
gamerule fireDamage true

# Allow phantoms to spawn
gamerule doInsomnia true

# Allow villagers to breed
gamerule mobGriefing true

# Allow players to craft any recipe
gamerule doLimitedCrafting false

# Allow a single player to sleep for the server
gamerule playersSleepingPercentage 25

# Server performance rules
gamerule doFireTick false
gamerule disableElytraMovementCheck true
